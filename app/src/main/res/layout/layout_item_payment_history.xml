<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:orientation="vertical"
    android:paddingTop="@dimen/space_tiny"
    android:weightSum="5">


    <LinearLayout
        android:id="@+id/btn_profile"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_border_gray_1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_profile"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/space_normal"
            android:layout_marginRight="@dimen/dimen_1x"
            android:background="@color/transparent"
            android:gravity="center_vertical|left"
            android:src="@drawable/ic_transaction_money" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <com.app.hotgo.widget.MyTextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:text="november 25 2918"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <com.app.hotgo.widget.MyTextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:text="november 25 2918"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>


        <com.app.hotgo.widget.MyTextView
            android:id="@+id/lblDestination"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/bg_border_green"
            android:ellipsize="marquee"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_1x"
            android:paddingRight="@dimen/dimen_1x"
            android:singleLine="true"
            android:text="+1423"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xlarge" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_tiny"
        android:orientation="horizontal">

        <com.app.hotgo.widget.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="@string/lbl_transactionId"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <com.app.hotgo.widget.MyTextView
            android:id="@+id/txtTransactionID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_weight="5"
            android:gravity="center_vertical|left"
            android:text="12"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_tiny"
        android:orientation="horizontal">

        <com.app.hotgo.widget.MyTextView
            android:id="@+id/lblTripIdHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="@string/lbl_transaction_id"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <com.app.hotgo.widget.MyTextView
            android:id="@+id/txtTripID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_weight="5"
            android:gravity="center_vertical|left"
            android:text=""
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_tiny"
        android:orientation="horizontal">

        <com.app.hotgo.widget.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="@string/lbl_notes"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <com.app.hotgo.widget.MyTextView
            android:id="@+id/txtNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_weight="5"
            android:gravity="center_vertical|left"
            android:textAllCaps="true"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

</LinearLayout>