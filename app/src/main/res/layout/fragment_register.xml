                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/lblTypeCar"
                        android:textColor="@color/text_color_secondary"
                        android:textSize="@dimen/text_size_normal" />

                    <Spinner
                        android:id="@+id/txtTypeCar"
                        style="@style/et_edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:hint="@string/lbl_document" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_small"
                android:paddingRight="@dimen/space_small"
                android:visibility="gone"
                android:paddingBottom="@dimen/space_nano">

                <com.app.hotgo.widget.TextViewFontAwesome
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/ic_payment"
                    android:textColor="@color/text_color_secondary"
                    android:textSize="@dimen/text_size_xlarge" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/space_small">

                    <com.app.hotgo.widget.MyTextView
                        android:id="@+id/txtStatusPaypalOption"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/lblPayoutPaypalBinding"
                        android:textColor="@color/text_color_secondary"
                        android:textSize="@dimen/text_size_normal" />

                    <EditText
                        android:id="@+id/txtAccount"
                        style="@style/et_edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/lblPayoutPaypalHint" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_small"
                android:paddingRight="@dimen/space_small">


                <com.app.hotgo.widget.TextViewFontAwesome
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/ic_payment"
                    android:textColor="@color/text_color_secondary"
                    android:textSize="@dimen/text_size_xlarge" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.app.hotgo.widget.MyTextView
                        android:id="@+id/tv_vehicle_image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/space_small"
                        android:text="@string/vehicle_image"
                        android:textColor="@color/text_color_secondary"
                        android:textSize="@dimen/text_size_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgPhotoOne"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="@dimen/margin_horizontal"
                            android:layout_marginRight="@dimen/margin_small"
                            android:background="@color/text_color_secondary"
                            android:contentDescription="@string/content_description"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_upload" />

                        <ImageView
                            android:id="@+id/imgPhotoTwo"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="@dimen/margin_horizontal"
                            android:background="@color/text_color_secondary"
                            android:contentDescription="@string/content_description"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_upload" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>

