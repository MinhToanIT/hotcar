<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical">

    <include layout="@layout/layout_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:orientation="vertical"
            android:padding="@dimen/space_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/action_button_height"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/space_small">

                <com.app.hotgo.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/current_password"
                    android:textColor="@color/text_hint_two"
                    android:textSize="@dimen/text_size_normal" />

                <com.app.hotgo.widget.MyEditText
                    android:id="@+id/edt_current_password"
                    style="@style/et_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/current_password"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_small"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/space_small">

                <com.app.hotgo.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/new_password"
                    android:textColor="@color/text_hint_two"
                    android:textSize="@dimen/text_size_normal" />

                <com.app.hotgo.widget.MyEditText
                    android:id="@+id/edt_new_password"
                    style="@style/et_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/new_password"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_small"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/space_small">

                <com.app.hotgo.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/confirm_password"
                    android:textColor="@color/text_hint_two"
                    android:textSize="@dimen/text_size_normal" />

                <com.app.hotgo.widget.MyEditText
                    android:id="@+id/edt_confirm_password"
                    style="@style/et_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword" />
            </LinearLayout>

            <com.app.hotgo.widget.MyTextView
                android:id="@+id/bt_submit"
                android:layout_width="@dimen/btn_width"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_16"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/action_button_height"
                android:background="@drawable/bg_border_violet"
                android:gravity="center"
                android:text="@string/lbl_submit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>